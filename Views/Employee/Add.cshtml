@model QuarterlySalesApp.Models.Employee
@{
    ViewData["Title"] = "Add Employee";
}

<h2>Add Employee</h2>

<form asp-action="Add" class="form-container">
    <div class="form-group">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Birth Date</label>
        <input asp-for="DOB" type="date" class="form-control" />
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Hire Date</label>
        <input asp-for="DateOfHire" type="date" class="form-control" />
        <span asp-validation-for="DateOfHire" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Manager</label>
        <select asp-for="ManagerId" class="form-control" asp-items="@(new SelectList(ViewBag.Managers, "EmployeeId", "FullName"))">
            <option value="">-- Select Manager --</option>
        </select>
        <span asp-validation-for="ManagerId" class="text-danger"></span>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Add</button>
    <a href="/" class="btn btn-outline-primary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
